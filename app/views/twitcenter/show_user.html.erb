<h1>
  <% if @user.avatar.blank? == false %>
    <%= image_tag @user.avatar.url, size:75 %>
  <% else %>
    <%= image_tag "newbie.png", size: 50 %>  
  <% end %> 
  @<%= @user.username %>'s Twits And Tweets</h1>
<h4><%= @user.name %></h4>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>
<hr>
<p>
    <% if current_user.following.include?(@user.id) %>
        <%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-primary", id: "unfollow_btn" %>
    <% else %>
        <% if current_user.id != @user.id %>
	    <%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
	<% end %>
    <% end %>
</p>

<div>
  <h4>@<%= @user.username %> Twits:</h4>
</div>

<%= render @user.tweets%>